package produtoprincipal;

import java.util.Scanner;

import entities.product;

public class produto {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		product x;
		x = new product();
		
		x.name = "tv";
		x.price = 900.00;
		x.stock = 10;
		x.total = x.price * x.stock;
		
		
		System.out.println(x.name + " , $" + x.price + " , " + x.stock + " units , $" + x.total);
		
		System.out.println("Enter the numbers of products to be in stock : ");
		int add = sc.nextInt();
		x.stock += add;
		x.total = x.price * x.stock;
		System.out.println(x.name + " , $" + x.price + " , " + x.stock + " units , $" + x.total);
		System.out.println("Enter the numbers of products to be remove from stock : ");
		int remove = sc.nextInt();
		x.stock -= remove;
		x.total = x.price * x.stock;
		System.out.println(x.name + " , $" + x.price + " , " + x.stock + " units , $" + x.total);
		
		sc.close();

	}

}
